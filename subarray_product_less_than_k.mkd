class Solution {
public:
    int numSubarrayProductLessThanK(vector<int>& nums, int k) {
        int ans=0,left=0,right=0,pro=1;
        for(;right<nums.size();right++)
        {
            pro*=nums[right];
            while(pro>=k&&left<=right) 
                pro/=nums[left++];
            if(left<=right) ans+=right-left+1;
            else right=left-1;
        }
        return ans;
    }
};
