class Solution {
public:
    int countSubstrings(string s) {
        int len=s.length(),amount=0;
        vector<vector<int>> dp(len,vector<int>(len,0));
        for(int i=len-1;i>=0;i--)
        {
            for(int j=i;j<len;j++)
            {
                dp[i][j]=(s[i]==s[j])&&(j-i<3||dp[i+1][j-1]);
                if(dp[i][j]) amount++;
            }
        }
        return amount;
    }
};
